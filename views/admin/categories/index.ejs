<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container">
    <h1>Categorias</h1>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach((categorie) => { %>
            <tr>
                <th><%= categorie.id %></th>
                <th><%= categorie.title %></th>
                <th><%= categorie.slug %></th>
                <th>
                    <button class="btn btn-warning" type="button">Editar</button>
                    <button class="btn btn-danger" type="button">Deletar</button>
                </th>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <a class="btn btn-primary" href="/admin/categories/new">Criar Categoria</a>
</div>

<%- include('../../partials/footer.ejs') %>