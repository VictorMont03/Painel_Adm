<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container">
    <h1>Categorias</h1>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach((category) => { %>
            <tr>
                <th><%= category.id %></th>
                <th><%= category.title %></th>
                <th><%= category.slug %></th>
                <th>
                    <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-warning" type="button">Editar</a>
                         
                    <form action="/categories/delete" method="post" style="display: inline;" onsubmit="deleteConfirmation(event, this)">
                        <input type="hidden" name="id" value="<%= category.id %>">
                        <button class="btn btn-danger">Deletar</button>
                    </form>        
                </th>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <a class="btn btn-primary" href="/admin/categories/new">Criar Categoria</a>
</div>

<%- include('../../partials/footer.ejs') %>

<script>
    function deleteConfirmation(event, form){
        event.preventDefault();
        if(confirm("Deseja deletar categoria?")){
            form.submit();
        }
    }
</script>